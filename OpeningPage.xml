<Page navigatingTo="onNavigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="{{ title }}" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
<StackLayout>
    
    <TextView class="txt" height="80%" hint="insert your note" text="{{ text }}" editable="true" />
    <Button text="save" tap="{{ onSave }}" class="btn btn-primary" />
    
</StackLayout>

</Page>